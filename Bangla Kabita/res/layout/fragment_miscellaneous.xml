<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:src="@drawable/mis_nalok" />
            
             <!-- End of Nalot -->
             
            <ImageView
		        android:id="@+id/imageView2"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="70dp"
		        android:src="@drawable/mis_mago" />
            
            <ImageView
		        android:id="@+id/imageView3"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="70dp"
		        android:src="@drawable/mis_mago2" />
            
             <!-- End of Mago Ora bole -->
             
            <ImageView
		        android:id="@+id/imageView4"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="70dp"
		        android:src="@drawable/mis_kosto" />
            
            <ImageView
		        android:id="@+id/imageView4"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="70dp"
		        android:src="@drawable/mis_kosto2" />
            
            <!-- End of Kosto -->
            
            <ImageView
		        android:id="@+id/imageView4"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="70dp"
		        android:src="@drawable/mis_ratri" />
            
            <!-- End of Ratri -->
            
            
        </LinearLayout>
    </ScrollView>
    
    
    

</RelativeLayout>
